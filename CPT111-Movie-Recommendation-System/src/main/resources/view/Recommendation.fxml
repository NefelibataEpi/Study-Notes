<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.controller.RecommendationController">
   <children>
      <AnchorPane prefHeight="600.0" prefWidth="200.0" style="-fx-background-color: #FFFFFF;">
         <children>
            <Label fx:id="usernameLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="50.0" layoutY="60.0" text="Username" AnchorPane.leftAnchor="50.0">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Label fx:id="typeLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="50.0" layoutY="85.0" opacity="0.6" text="Type" AnchorPane.leftAnchor="50.0">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <Button fx:id="homeButton" layoutX="66.0" layoutY="180.0" mnemonicParsing="false" onAction="#switchToHome" text="Home">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <Button fx:id="allMoviesButton" layoutX="49.0" layoutY="240.0" mnemonicParsing="false" onAction="#switchToAllMovies" text="All Movies">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <Button fx:id="watchlistButton" layoutX="54.0" layoutY="300.0" mnemonicParsing="false" onAction="#switchToWatchlist" text="Watchlist">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <Button fx:id="historyButton" layoutX="62.0" layoutY="360.0" mnemonicParsing="false" onAction="#switchToHistory" text="History">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <Button fx:id="recommendationButton" layoutX="22.0" layoutY="420.0" mnemonicParsing="false" onAction="#switchToRecommendation" text="Recommendation">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <Button fx:id="upgradeButton" layoutX="56.0" layoutY="480.0" mnemonicParsing="false" onAction="#upgradeButton" text="Upgrade">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>
      <AnchorPane layoutX="200.0" prefHeight="600.0" prefWidth="700.0" style="-fx-background-color: #F4F4F4;">
         <children>
            <Label layoutX="50.0" layoutY="50.0" text="Recommendation">
               <font>
                  <Font name="System Bold" size="22.0" />
               </font>
            </Label>
            <Label fx:id="currentStrategyLabel" layoutX="50.0" layoutY="85.0" text="Current Strategy:">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Button fx:id="genreButton" layoutX="100.0" layoutY="120.0" mnemonicParsing="false" onAction="#genreAction" text="Genre">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button fx:id="decadeButton" layoutX="250.0" layoutY="120.0" mnemonicParsing="false" onAction="#decadeAction" text="Decade">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button fx:id="ratingButton" layoutX="420.0" layoutY="120.0" mnemonicParsing="false" onAction="#ratingAction" text="Rating">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button fx:id="advancedGenreButton" layoutX="100.0" layoutY="180.0" mnemonicParsing="false" onAction="#advancedGenreAction" text="Advanced Genre">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button fx:id="advancedDecadeButton" layoutX="280.0" layoutY="180.0" mnemonicParsing="false" onAction="#advancedDecadeAction" text="Advanced Decade">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <TableView fx:id="movieTableView" layoutX="50.0" layoutY="230.0" prefHeight="250.0" prefWidth="600.0">
               <columns>
                  <TableColumn fx:id="colID" prefWidth="90.0" text="ID" />
                  <TableColumn fx:id="colTitle" prefWidth="300.0" text="Title" />
                  <TableColumn fx:id="colGenre" prefWidth="70.0" text="Genre" />
                  <TableColumn fx:id="colYear" prefWidth="70.0" text="Year" />
                  <TableColumn fx:id="colRating" prefWidth="70.0" text="Rating" />
               </columns>
            </TableView>
            <Button fx:id="addToWatchlistButton" layoutX="130.0" layoutY="540.0" mnemonicParsing="false" onAction="#addToWatchlistAction" text="Add to Watchlist">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button fx:id="markAsWatchedButton" layoutX="410.0" layoutY="540.0" mnemonicParsing="false" onAction="#markAsWatchedAction" text="Mark as Watched">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Label fx:id="errorLabel" layoutX="100.0" layoutY="500.0" text="Error" textFill="RED">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label fx:id="numberLabel" layoutX="465.0" layoutY="173.0" text="Recommendation Number: " />
            <TextField fx:id="recommendationNumField" layoutX="465.0" layoutY="189.0" prefHeight="25.0" prefWidth="80.0" promptText="Enter number">
               <font>
                  <Font size="10.0" />
               </font>
            </TextField>
            <Button fx:id="refreshButton" layoutX="560.0" layoutY="190.0" mnemonicParsing="false" onAction="#refreshAction" text="Refresh" />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
