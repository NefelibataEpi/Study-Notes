<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="550.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.controller.RegisterController">
   <children>
      <Label alignment="CENTER" layoutX="107.0" layoutY="35.0" text="Create New Account">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>
      <Label layoutX="75.0" layoutY="100.0" text="Username: ">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <TextField fx:id="usernameField" layoutX="75.0" layoutY="122.0" prefHeight="25.0" prefWidth="250.0" promptText="Enter new username" />
      <Label layoutX="100.0" layoutY="150.0" opacity="0.6" text="3-20 characters" />
      <Label layoutX="100.0" layoutY="165.0" opacity="0.6" text="Letters and/or numbers" />
      <Label layoutX="100.0" layoutY="180.0" opacity="0.6" text="Cannot be numbers only" />
      <Label layoutX="75.0" layoutY="200.0" text="Password:">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <PasswordField fx:id="passwordField" layoutX="75.0" layoutY="222.0" prefHeight="25.0" prefWidth="250.0" promptText="Enter new password" />
      <Label layoutX="100.0" layoutY="250.0" opacity="0.6" text="3-20 characters" />
      <Label layoutX="100.0" layoutY="265.0" opacity="0.6" text="Letters and/or numbers" />
      <Label layoutX="75.0" layoutY="285.0" text="Confirm Password:">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <PasswordField fx:id="confirmField" layoutX="75.0" layoutY="307.0" prefHeight="25.0" prefWidth="250.0" promptText="Confirm password" />
      <Label fx:id="errorLabel" layoutX="75.0" layoutY="350.0" text="ErrorLabel" textFill="RED">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Button fx:id="registerButton" layoutX="140.0" layoutY="400.0" mnemonicParsing="false" onAction="#registerButtonAction" prefHeight="35.0" prefWidth="120.0" text="Register">
         <font>
            <Font size="16.0" />
         </font>
      </Button>
      <Button fx:id="backButton" layoutX="140.0" layoutY="468.0" mnemonicParsing="false" onAction="#backButtonAction" prefHeight="35.0" prefWidth="120.0" text="Back to Login" />
   </children>
</AnchorPane>
