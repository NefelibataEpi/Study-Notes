<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="550.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.controller.ForgetPasswordController">
   <children>
      <Label layoutX="115.0" layoutY="35.0" text="Forget Password">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>
      <Label layoutX="75.0" layoutY="110.0" text="Username: ">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <TextField fx:id="usernameField" layoutX="75.0" layoutY="132.0" prefHeight="25.0" prefWidth="250.0" promptText="Enter new username" />
      <Label layoutX="75.0" layoutY="190.0" text="Password:">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <PasswordField fx:id="passwordField" layoutX="75.0" layoutY="212.0" prefHeight="25.0" prefWidth="250.0" promptText="Enter new password" />
      <Label layoutX="100.0" layoutY="240.0" opacity="0.6" text="3-20 characters" />
      <Label layoutX="100.0" layoutY="255.0" opacity="0.6" text="Letters and/or numbers" />
      <Label layoutX="75.0" layoutY="275.0" text="Confirm Password:">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <PasswordField fx:id="confirmField" layoutX="75.0" layoutY="297.0" prefHeight="25.0" prefWidth="250.0" promptText="Confirm password" />
      <Label fx:id="errorLabel" layoutX="75.0" layoutY="360.0" text="ErrorLabel" textFill="RED">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Button fx:id="registerButton" layoutX="140.0" layoutY="410.0" mnemonicParsing="false" onAction="#submitButtonAction" prefHeight="35.0" prefWidth="120.0" text="Submit">
         <font>
            <Font size="16.0" />
         </font>
      </Button>
      <Button fx:id="backButton" layoutX="140.0" layoutY="478.0" mnemonicParsing="false" onAction="#backButtonAction" prefHeight="35.0" prefWidth="120.0" text="Back to Login" />
   </children>
</AnchorPane>
