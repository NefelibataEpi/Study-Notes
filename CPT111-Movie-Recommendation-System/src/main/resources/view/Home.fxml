<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.controller.HomeController">
   <children>
      <AnchorPane prefHeight="600.0" prefWidth="200.0" style="-fx-background-color: #FFFFFF;">
         <children>
            <Label fx:id="usernameLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="50.0" layoutY="60.0" text="Username" AnchorPane.leftAnchor="50.0">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Label fx:id="typeLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="50.0" layoutY="85.0" opacity="0.6" text="Type" AnchorPane.leftAnchor="50.0">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <Button fx:id="homeButton" layoutX="66.0" layoutY="180.0" mnemonicParsing="false" onAction="#switchToHome" text="Home">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <Button fx:id="allMoviesButton" layoutX="49.0" layoutY="240.0" mnemonicParsing="false" onAction="#switchToAllMovies" text="All Movies">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <Button fx:id="watchlistButton" layoutX="54.0" layoutY="300.0" mnemonicParsing="false" onAction="#switchToWatchlist" text="Watchlist">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <Button fx:id="historyButton" layoutX="62.0" layoutY="360.0" mnemonicParsing="false" onAction="#switchToHistory" text="History">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <Button fx:id="recommendationButton" layoutX="22.0" layoutY="420.0" mnemonicParsing="false" onAction="#switchToRecommendation" text="Recommendation">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <Button fx:id="upgradeButton" layoutX="56.0" layoutY="480.0" mnemonicParsing="false" onAction="#upgradeButton" text="Upgrade">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>
      <AnchorPane layoutX="200.0" prefHeight="600.0" prefWidth="700.0" style="-fx-background-color: #F4F4F4;">
         <children>
            <Label fx:id="welcomeLabel" layoutX="50.0" layoutY="50.0" text="Welcome back, ">
               <font>
                  <Font size="36.0" />
               </font>
            </Label>
            <Label fx:id="userTypeLabel" layoutX="50.0" layoutY="100.0" text="User type: ">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Label fx:id="watchlistCountLabel" layoutX="50.0" layoutY="258.0" text="Watchlist Count:">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label fx:id="historyCountLabel" layoutX="49.0" layoutY="300.0" text="History Count:">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
